def main():
    dollars = (input("How much was the meal? ")).removeprefix('$')
    dollars = float(dollars)
    percent = (input("What percentage would you like to tip? ")).removesuffix('%')
    percent = float (percent)
    percent = percent / 100
    tip = dollars * percent
    print(f"Leave ${tip:.2f}")

main ()


def intpercent (wert): 
    return wert / 100

wert = 34
print (f'Der Prozentwert ist: {wert:.2f}%')

def main2():
    dollars2 = (input("How much was the meal? ")).removeprefix('$')
    dollars2 = float(dollars2)
    percent2 = (input("What percentage would you like to tip? ")).removesuffix('%')
    percent2 = float (percent2)
    percent2 = intpercent (percent2)
    tip2 = dollars2 * percent2
    print(f"Leave ${tip2:.2f}")

main2 ()